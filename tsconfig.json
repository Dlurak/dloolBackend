{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "removeComments": true,

        "baseUrl": "./src",
        "paths": {
            "$utils/*": ["utils/*"],
            "$database/*": ["database/*"],
        }
    },
    "include": [
        "./src"
    ],
    "exclude": [
        "./node_modules"
    ]
}